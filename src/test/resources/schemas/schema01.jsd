{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Modified JSON Schema draft v4 that includes the optional '$ref' and 'format'",
  "type": "object",
  "properties": {
    "fullName": {
      "type": "string",
      "format": "uri"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "age": {
      "type": "integer"
    },
    "educationDetails": {
      "type": "object",
      "properties": {
        "schoolName": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      },
      "required": ["schoolName"]
    }
  },
  "required": ["fullName"]
}