{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Modified JSON Schema draft v4 that includes the optional '$ref' and 'format'",
  "type": "object",
  "properties": {
    "fullName": {
      "type": ["string","null"],
      "format": "uri"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "age": {
      "type": "integer"
    },
    "birthday": {
      "type": "string"
    },
    "startDate": {"type": "string"},
    "educationDetails": {
      "type": "object",
      "properties": {
        "schoolName": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      },
      "required": ["schoolName"]
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "description": {"type": ["string", "null"]}
        }
      }
    }
  },
  "required": ["fullName", "birthday", "startDate"]
}